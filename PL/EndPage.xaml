<Page x:Class="Ask.PL.EndPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ask.PL"
      mc:Ignorable="d" 
      d:DesignWidth="765" Height="495"
      Title="EndPage">

    <Grid>

        <TextBlock Text="Your Result" VerticalAlignment="Top" HorizontalAlignment="Center"
                   Margin="60"
                   FontSize="70" FontFamily="Trajan Pro 3" Foreground="#01579B"/>

        <Label x:Name="scoreLabel" Content="50/50" 
               Margin="0,200,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="50" FontFamily="Vineta BT" Foreground="Maroon"/>

        <Button x:Name="NewGameBtn" Content="New Game" FontSize="20" Height="50" Width="400"
                Background="#1565C0" BorderBrush="#01579B" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                BorderThickness="5" Foreground="WhiteSmoke"  
                Margin="0,0,0,80" Click="NewGameBtn_Click"/>



    </Grid>
</Page>